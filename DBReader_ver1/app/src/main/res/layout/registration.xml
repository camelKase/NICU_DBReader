<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <TextView
        android:id="@+id/loginscrn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="@string/registration"
        android:textColor="@color/head"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:textStyle="bold|italic"/>
    <TextView
        android:id="@+id/fstTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/head"
        android:text="@string/full_name"/>
    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:ems="10"
        android:labelFor="@+id/txtName"
        android:inputType="textPersonName"
        android:textColor="@color/head"
        android:backgroundTint="@android:color/holo_red_light"
        android:autofillHints="no" tools:targetApi="o" />
    <TextView
        android:id="@+id/secTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@color/head"
        android:layout_marginStart="100dp" />
    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:ems="10"
        android:labelFor="@+id/txtEmail"
        android:inputType="textEmailAddress"
        android:textColor="@color/head"
        android:backgroundTint="@android:color/holo_red_light"
        android:autofillHints="" tools:targetApi="o" />
    <TextView
        android:id="@+id/thirdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textColor="@color/head"
        android:layout_marginStart="100dp" />
    <EditText
        android:id="@+id/txtPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:inputType="textPassword"
        android:ems="10"
        android:labelFor="@+id/txtPwd"
        android:textColor="@color/head"
        android:backgroundTint="@android:color/holo_red_light"
        android:autofillHints="" tools:targetApi="o" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="@string/register" />
    <TextView android:id="@+id/lnkLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/already_registered_login_here"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#3F51B5"
        android:onClick="test"/>
</LinearLayout>
